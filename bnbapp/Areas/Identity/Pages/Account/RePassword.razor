    string errorOld = "";
    bool isValid = false;
    bool result1 = false;
    bool isAdmin = false;
    bool isBulk = false;
    protected override async Task OnInitializedAsync()
    {



        var user = (await _authenticationStateProvider.GetAuthenticationStateAsync()).User;
        if (user.Identity.IsAuthenticated)
        {
            isSigned = true;
            userID = UserManager.GetUserName(user);
            getUser = await UserManager.FindByEmailAsync(userID);
            if (userID == "bnbcoding.tech@gmail.com" || userID == "bnbcoding.technologies@gmail.com" || userID == "beck.vilas@gmail.com" || userID == "andrea.bella0816@gmail.com") isAdmin = true;
            if (userID == "beck.vilas@gmail.com" || userID == "andrea.bella0816@gmail.com" || userID == "bnbcoding.technologies@gmail.com" || userID == "bulk.vita@gmail.com") isBulk = true;


        }
    }

    protected async Task ValidatePass(string pass)
    {
        var passwordValidator = new PasswordValidator<IdentityUser>();
        var result = await passwordValidator.ValidateAsync(UserManager, null, pass);

        if(result.Succeeded)
        {
            isValid = true;
        }
    }
    protected async Task ChangePwd(string oldpass, string newpass)
    {
        await UserManager.ChangePasswordAsync(getUser, oldpass, newpass);
    }
    private void ChangePass()
    {
        result1 = false;
        CheckCurrent(curPwd);
        if (result1)
        {

            if (confPwd == newPwd)
            {
                isValid = false;
                ValidatePass(newPwd);
                if (isValid)
                {
                    ChangePwd(curPwd, newPwd);
                }
                else errorNew = "The New Password Is Not Strong Enough";

            }
            else errorNew = "Passwords Do Not Match";

        }
        else errorOld = "Current Password Is Incorrect";
    }

    protected async Task CheckCurrent(string current)
    {
        result1 = await UserManager.CheckPasswordAsync(getUser, current);
    }
}